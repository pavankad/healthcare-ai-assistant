# EMR System Environment Configuration
# Copy this file to .env and update with your specific values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=emr_database
DB_USER=emr_user
DB_PASSWORD=emr_password
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Application Configuration
SECRET_KEY=your_secret_key_change_in_production
DEBUG=True
APP_HOST=0.0.0.0
APP_PORT=5000
SESSION_TIMEOUT_HOURS=8

# PostgreSQL Admin Configuration (for database setup)
POSTGRES_PASSWORD=postgres
